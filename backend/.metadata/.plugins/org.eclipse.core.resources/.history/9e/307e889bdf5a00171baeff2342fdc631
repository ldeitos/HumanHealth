package br.com.humanhealth.filter;

import java.io.IOException;

import javax.enterprise.inject.spi.CDI;
import javax.servlet.FilterChain;
import javax.servlet.ServletException;
import javax.servlet.ServletRequest;
import javax.servlet.ServletResponse;
import javax.servlet.http.HttpServletRequest;

import br.com.humanhealth.security.context.SecurityContext;

public class AuthFilter extends  FilterBase {


    @Override
    public void doFilter(ServletRequest request, ServletResponse response, FilterChain chain)
	    throws IOException, ServletException {
	SecurityContext secCtx = CDI.current().select(SecurityContext.class).get();
	String token = getToken(request);
	
	secCtx.login(token);

	chain.doFilter(request, response);
	
    }

    private String getToken(ServletRequest request) {	
	String token = ""; 
	HttpServletRequest httpRequest = toHttpRequest(request);
	
	if(httpRequest != null){
	    token = httpRequest.getHeader("Authorization");
	    token = token.replaceAll("Bearer ", "");
	}	
	
	return token;
    }

    private HttpServletRequest toHttpRequest(ServletRequest request) {
	HttpServletRequest httpRequest = null;
	
	if(request instanceof HttpServletRequest){
	    httpRequest = (HttpServletRequest) request;
	}
	
	return httpRequest;
    }

}
