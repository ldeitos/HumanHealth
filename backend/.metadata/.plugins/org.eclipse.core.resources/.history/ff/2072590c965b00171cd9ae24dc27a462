package br.com.humanhealth.persistence;

import static br.com.humanhealth.persistence.TransactionType.REQUIRED;
import static java.lang.annotation.RetentionPolicy.RUNTIME;

import java.lang.annotation.Retention;

import javax.interceptor.InterceptorBinding;

/**
 * Binder to transaction interceptor. By default uses {@link TransactionType#REQUIRED}.
 * 
 * @see TransactionType
 * 
 * @author Deitos
 *
 */
@InterceptorBinding
@Retention(RUNTIME)
public @interface Transaction {
    public TransactionType value() default REQUIRED;
}
